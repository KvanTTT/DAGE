    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="App.paml" />
    <None Remove="MainWindow.paml" />
    <None Remove="MessageBox.paml" />
    <None Remove="NewGrammarWindow.paml" />
    <None Remove="SelectPathDialog.paml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\AntlrGrammarEditor\AssemblyInfo.cs" Link="AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="App.paml" />
    <EmbeddedResource Include="MainWindow.paml" />
    <EmbeddedResource Include="MessageBox.paml" />
    <EmbeddedResource Include="NewGrammarWindow.paml" />
    <EmbeddedResource Include="SelectPathDialog.paml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.6.1" />
    <PackageReference Include="Avalonia.Desktop" Version="0.6.1" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.6.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AntlrGrammarEditor\AntlrGrammarEditor.csproj" />
  </ItemGroup>

</Project>
