<Window xmlns="https://github.com/avaloniaui" SizeToContent="WidthAndHeight" Title="{Binding Title}" >
  <Grid Width="450" RowDefinitions="*,40" Margin="10">
    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" MaxHeight="300" Text="{Binding MessageBoxText}" />
    <Button Grid.Row="1" Width="80" Margin="0,10,0,0" Command="{Binding OkCommand}" >OK</Button>
  </Grid>
</Window>